<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManagerApp.RegisterPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <!-- Registration Form -->
            <Label Text="Créer un compte" FontSize="24" HorizontalOptions="Center" />
            
            <Entry x:Name="NomEntry" Placeholder="Nom" />
            <Entry x:Name="PrenomEntry" Placeholder="Prénom" />
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Mot de passe" IsPassword="True" />
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirmer le mot de passe" IsPassword="True" />

            <Button Text="S'inscrire" Clicked="OnRegisterClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>